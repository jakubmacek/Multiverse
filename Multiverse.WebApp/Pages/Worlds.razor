@page "/worlds"
@inject ApiClient ApiClient
@inject IAccountService AccountService
@inject IJSRuntime JsRuntime

<h1>Worlds</h1>

@if (worlds == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Universe</th>
                <th>Current time</th>
                <th>Is running</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var world in worlds)
            {
                <tr class="@(world.Running ? "bg-success text-dark bg-opacity-10" : "bg-danger text-dark bg-opacity-10")">
                    <td>@world.Id</td>
                    <td>@world.Universe</td>
                    <td>@world.Timestamp</td>
                    <td>@world.Running</td>
                    <td><button type="button" class="btn btn-sm btn-primary" @onclick="() => AccountService.SetSelectedWorld(world)">Select</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private ICollection<AvailableWorld>? worlds;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            worlds = await ApiClient.GetWorldsAsync();
        }
        catch (Exception ex)
        {
            await JsRuntime.InvokeVoidAsync("alert", "test");
        }
    }
}
